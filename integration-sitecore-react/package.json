{
  "name": "webpack-simple-boilerplate",
  "version": "1.0.0",
  "description": "Simple webpack boilerplate for single page applications",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel clean:* watch:*",
    "build": "npm-run-all --serial clean:dist build:eleventy clean:build build:webpack",
    "clean:build": "rimraf build",
    "clean:dist": "rimraf dist",
    "watch:eleventy": "eleventy --serve",
    "watch:webpack": "webpack --config webpack.dev.js",
    "watch:build": "serve ./build",
    "build:webpack": "webpack --config webpack.prod.js",
    "build:eleventy": "eleventy --output=./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/valtech-ch/ic-fe-blueprint.git"
  },
  "keywords": [
    "webpack",
    "boilerplate",
    "es6",
    "babel",
    "sass"
  ],
  "author": "Valtech",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.12.3",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "assets-webpack-plugin": "^6.0.3",
    "babel-loader": "^8.3.0",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.1",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.5.0",
    "html-webpack-skip-assets-plugin": "0.0.2",
    "ignore-loader": "^0.1.2",
    "image-webpack-loader": "^7.0.1",
    "mini-css-extract-plugin": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.7",
    "postcss-loader": "^4.0.4",
    "postcss-nested": "^5.0.1",
    "serve": "^11.3.2",
    "tailwindcss": "^1.9.6",
    "url-loader": "^4.1.1",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.2.0",
    "webpack-glob-folder-entries": "^1.0.0",
    "webpack-merge": "^5.4.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "postcss-import": "^13.0.0",
    "postcss-import-ext-glob": "^1.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
